<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Default welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Vulnerable Servlet -->
    <servlet>
        <servlet-name>VulnerableFileViewer</servlet-name>
        <servlet-class>com.fileviewer.servlet.VulnerableFileViewer</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VulnerableFileViewer</servlet-name>
        <url-pattern>/vuln-view</url-pattern>
    </servlet-mapping>

    <!-- Secure Servlet -->
    <servlet>
        <servlet-name>ReportViewerServlet</servlet-name>
        <servlet-class>com.fileviewer.servlet.ReportViewerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportViewerServlet</servlet-name>
        <url-pattern>/secure-view</url-pattern>
    </servlet-mapping>

</web-app>
